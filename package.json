{
  "name": "egoroof-blowfish",
  "version": "1.0.0",
  "description": "Blowfish encryption library for browsers and Node.js",
  "main": "dist/blowfish.js",
  "scripts": {
    "lint": "eslint -c tools/.eslintrc.js src/**/*.js",
    "build": "npm run build:concat && npm run build:transpile && npm run build:wrap && npm run build:compress",
    "build:concat": "rollup -f es -i src/Blowfish.js -o dist/blowfish.js",
    "build:transpile": "babel dist/blowfish.js -o dist/blowfish.js",
    "build:wrap": "rollup -f umd -n Blowfish -i dist/blowfish.js -o dist/blowfish.js",
    "build:compress": "uglifyjs dist/blowfish.js -o dist/blowfish.js -m -c",
    "coverage": "nyc mocha test/node.js coverage && nyc report --reporter=text-lcov | coveralls",
    "test": "npm run lint && npm run build && npm run test:node && npm run test:browser",
    "test:browser": "karma start tools/karma.conf.js",
    "test:node": "mocha -c test/node.js",
    "preversion": "npm test",
    "version": "node tools/prepare_readme && git add package.json README.md",
    "postversion": "git push && git push --tags && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/egoroof/blowfish.git"
  },
  "keywords": [
    "blowfish",
    "cipher",
    "ecb",
    "cbc",
    "encryption",
    "decryption"
  ],
  "author": "egoroof",
  "files": [
    "LICENSE.md",
    "README.md",
    "dist"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/egoroof/blowfish/issues"
  },
  "homepage": "https://github.com/egoroof/blowfish#readme",
  "devDependencies": {
    "babel-cli": "6.23.0",
    "babel-preset-env": "1.1.10",
    "chai": "3.5.0",
    "coveralls": "2.11.16",
    "eslint": "3.16.1",
    "karma": "1.5.0",
    "karma-chai": "0.1.0",
    "karma-chrome-launcher": "2.0.0",
    "karma-edge-launcher": "0.2.0",
    "karma-firefox-launcher": "1.0.0",
    "karma-ie-launcher": "1.0.0",
    "karma-mocha": "1.3.0",
    "karma-safari-launcher": "1.0.0",
    "mocha": "3.2.0",
    "nyc": "10.1.2",
    "rollup": "0.41.4",
    "uglify-js": "2.7.5"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "nyc": {
    "include": [
      "src"
    ]
  }
}
