{
  "name": "egoroof-blowfish",
  "version": "3.0.0",
  "description": "Blowfish encryption library for browsers and Node.js",
  "main": "dist/blowfish.js",
  "types": "./egoroof-blowfish.d.ts",
  "scripts": {
    "lint": "eslint src test tools --ext js,mjs",
    "build": "npm run build:wrap && npm run build:compress && node tools/distSize.mjs",
    "build:wrap": "rollup -f umd -n Blowfish -i src/Blowfish.mjs -o dist/blowfish.js",
    "build:compress": "terser dist/blowfish.js -o dist/blowfish.js -m -c",
    "test": "npm run prettier:check && npm run lint && npm run build && npm run mocha",
    "mocha": "node --test --test-reporter spec test/",
    "preversion": "npm test",
    "version": "git add package.json package-lock.json",
    "postversion": "git push && git push --tags && npm publish",
    "prettier:write": "prettier --write .",
    "prettier:check": "prettier --check ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/egoroof/blowfish.git"
  },
  "keywords": [
    "blowfish",
    "cipher",
    "ecb",
    "cbc",
    "encryption",
    "decryption",
    "library"
  ],
  "author": "egoroof",
  "files": [
    "LICENSE.md",
    "README.md",
    "dist/blowfish.js",
    "egoroof-blowfish.d.ts"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/egoroof/blowfish/issues"
  },
  "homepage": "https://github.com/egoroof/blowfish#readme",
  "devDependencies": {
    "eslint": "^8.37.0",
    "prettier": "^2.8.7",
    "rollup": "^3.20.2",
    "terser": "^5.16.8"
  }
}
